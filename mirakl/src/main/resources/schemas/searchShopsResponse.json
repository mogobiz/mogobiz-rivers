{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Search Mirakl Shops",
  "type": "object",
  "javaType": "com.mogobiz.mirakl.client.io.SearchShops",
  "properties": {
    "shops": { "type": "array", "items": {"type": "object", "$ref": "#/definitions/shop"} },
    "total_count": {"type": "integer"}
  },
  "required": [],
  "definitions": {
    "shop": {
      "type": "object",
      "extends": {"$ref": "common.json#/definitions/shop"},
      "javaType": "com.mogobiz.mirakl.client.domain.OutputShop",
      "properties": {
        "approval_delay": { "type": "integer" },
        "approval_rate": { "type": "integer" },
        "banner": { "type": "string", "format": "uri" },
        "billing_info": {"type": "object", "$ref": "common.json#/definitions/billingInfo"},
        "channels": { "type": "array", "items": {"type": "string"}, "uniqueItems": true },
        "closed_from": {"type": "string", "format": "date-time"},
        "closed_to": {"type": "string", "format": "date-time"},
        "contact_informations": {"type": "object", "$ref": "common.json#/definitions/contactInfo"},
        "date_created": {"type": "string", "format": "date-time"},
        "evaluations_count": {"type": "integer"},
        "free_shipping": {"type": "boolean"},
        "grade": {"type": "number"},
        "last_updated_date": {"type": "string", "format": "date-time"},
        "logo": {"type": "string"},
        "offers_count": {"type": "integer"},
        "order_messages_response_delay": {"type": "integer"},
        "orders_count": {"type": "integer"},
        "payment_details": {"type": "object", "$ref": "common.json#/definitions/paymentDetails"},
        "premium_state": {"$ref": "common.json#/definitions/premiumState"},
        "shippings": {"type": "array", "items": {"type": "object", "$ref": "common.json#/definitions/shipping"}},
        "shipping_types": { "type": "array", "items": {"type": "string"}},
        "shipping_zones": { "type": "array", "items": {"type": "string"}},
        "shop_id": {"type": "integer"},
        "shop_state": {"$ref": "common.json#/definitions/shopState"}
      }
    }
  }
}
